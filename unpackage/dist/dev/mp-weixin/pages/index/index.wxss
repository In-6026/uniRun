.head {
  width: 100%;
  height: 30px;
  line-height: 30px;
}
.head text {
  float: left;
  font-size: 16px;
  margin-left: 5px;
  font-weight: bolder;
}
.head .chat-icon {
  position: relative;
  float: right;
  width: 28px;
  height: 28px;
  margin-right: 5px;
}
.head .chat-icon view:nth-child(1) {
  position: absolute;
  width: 28px;
  height: 28px;
}
.head .chat-icon view:nth-child(2) {
  position: absolute;
  top: 0;
  right: 0;
  width: 10px;
  height: 10px;
}
.head .chat-icon::after {
  clear: both;
}
.scorll-case {
  display: flex;
  width: 100%;
  height: 134rpx;
  margin-top: 20rpx;
  justify-content: space-around;
}
.scorll-case .scorll-item {
  width: 100rpx;
  height: 100%;
}
.scorll-case .scorll-item image {
  margin-left: 3rpx;
  width: 94rpx;
  height: 94rpx;
}
.scorll-case .scorll-item .text {
  line-height: 40rpx;
  font-size: 24rpx;
  text-align: center;
  height: 40rpx;
}
.rank {
  width: calc(100% - 10px);
  margin: 10px 5px;
  height: auto;
}
.rank .rank-title {
  width: 100%;
  height: 30px;
  line-height: 30px;
}
.rank .rank-title .tle {
  float: left;
  font-size: 14px;
  font-weight: bolder;
}
.rank .rank-title .tle-i {
  float: right;
  width: auto;
  height: 100%;
  display: flex;
}
.rank .rank-title .tle-i .tle-i-txt {
  height: 100%;
  font-size: 14px;
}
.rank .rank-title .tle-i::after {
  clear: both;
}
.rank .my-rank {
  height: 20px;
  font-size: 13px;
  line-height: 20px;
}
.rank .case {
  width: 100%;
  height: auto;
}
.rank .case .gender {
  font-size: 13px;
  font-weight: bolder;
  padding-left: 10px;
}
.rank .case .card {
  display: flex;
  width: 100%;
  height: 60px;
  border-radius: 3px;
  background: #eee;
  margin-bottom: 10px;
}
.rank .case .card .No {
  width: 60px;
  height: 100%;
  line-height: 60px;
  text-align: center;
  font-size: 15px;
  font-weight: bold;
}
.rank .case .card .No1 {
  color: #dd524d;
}
.rank .case .card .No2 {
  color: #f0ad4e;
}
.rank .case .card .No3 {
  color: #4cd964;
}
.rank .case .card .txt-info {
  width: calc(100% - 60px);
  height: 100%;
}
.rank .case .card .txt-info .name-times {
  height: 40px;
  width: 100%;
  line-height: 40px;
  font-size: 13px;
  font-weight: bolder;
}
.rank .case .card .txt-info .name-times text:nth-child(2) {
  float: right;
  padding-right: 5px;
}
.rank .case .card .txt-info .name-times text:nth-child(2)::after {
  clear: both;
}
.rank .case .card .txt-info .class-klmt {
  height: 20px;
  width: 100%;
  font-size: 12px;
  color: #999;
}
.rank .case .card .txt-info .class-klmt text:nth-child(2) {
  float: right;
  padding-right: 5px;
}
.rank .case .card .txt-info .class-klmt text:nth-child(2)::after {
  clear: both;
}

