.case {
  width: 100%;
  height: auto;
}
.case .card {
  display: flex;
  width: 100%;
  height: 60px;
  border-radius: 3px;
  background: #eee;
  margin-bottom: 10px;
}
.case .card .No {
  width: 60px;
  height: 100%;
  line-height: 60px;
  text-align: center;
  font-size: 15px;
  font-weight: bold;
}
.case .card .No1 {
  color: #dd524d;
}
.case .card .No2 {
  color: #f0ad4e;
}
.case .card .No3 {
  color: #4cd964;
}
.case .card .txt-info {
  width: calc(100% - 60px);
  height: 100%;
}
.case .card .txt-info .name-times {
  height: 40px;
  width: 100%;
  line-height: 40px;
  font-size: 13px;
  font-weight: bolder;
}
.case .card .txt-info .name-times text:nth-child(2) {
  float: right;
  padding-right: 5px;
}
.case .card .txt-info .name-times text:nth-child(2)::after {
  clear: both;
}
.case .card .txt-info .class-klmt {
  height: 20px;
  width: 100%;
  font-size: 12px;
  color: #999;
}
.case .card .txt-info .class-klmt text:nth-child(2) {
  float: right;
  padding-right: 5px;
}
.case .card .txt-info .class-klmt text:nth-child(2)::after {
  clear: both;
}

