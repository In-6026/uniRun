.map-bg {
  position: relative;
  background: #eee;
}
.map-bg .re-set-pos {
  position: absolute;
  left: 10px;
  bottom: 10px;
}
.map-bg .map {
  width: 100%;
  height: 200px;
}
.run-kilmts {
  position: relative;
  height: 50px;
  width: 100%;
}
.run-kilmts .has-times {
  position: absolute;
  left: 5px;
  font-size: 13px;
  color: #439947;
}
.run-kilmts .has-kilomt {
  position: absolute;
  left: 0;
  right: 0;
  margin: -50px auto 0 auto;
  width: 100px;
  height: 100px;
  border-radius: 100%;
  background: #fff;
  box-shadow: 0 1px 1px rgba(43, 153, 47, 0.5);
  text-align: center;
}
.run-kilmts .has-kilomt text {
  display: block;
}
.run-kilmts .has-kilomt text:nth-child(1) {
  margin-top: 30px;
  font-size: 12px;
  color: #999;
}
.run-kilmts .has-kilomt text:nth-child(2) {
  font-size: 15px;
  font-weight: bolder;
}
.run-kilmts .has-kilomt text:nth-child(3) {
  font-size: 12px;
  color: #999;
}
.run-kilmts .aim-times {
  position: absolute;
  right: 5px;
  font-size: 13px;
  color: #439947;
}
.say-hi {
  width: 100%;
  margin-top: 10px;
  font-weight: bolder;
  text-align: center;
}
.run-icon {
  position: fixed;
  width: 100px;
  height: 100px;
  border-radius: 100%;
  line-height: 100px;
  text-align: center;
  color: #fff;
  left: 0;
  right: 0;
  margin: auto;
  bottom: 50px;
  background: linear-gradient(to bottom, #439947, #43ee47);
  box-shadow: 0 1px 1px rgba(43, 153, 47, 0.5);
}

